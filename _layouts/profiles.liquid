<!-- _includes/profile.liquid -->
<div class="profile-card">
  {% comment %}
    We expect the caller to pass `person=person` to this include,
    so use `include.person` to access fields.
  {% endcomment %}

  {% if include.person.image %}
    <img src="{{ '/assets/img/' | append: include.person.image | relative_url }}"
         alt="{{ include.person.name }}"
         class="profile-photo">
  {% endif %}

  <h3>
    {% if include.person.link %}
      <a href="{{ include.person.link | relative_url }}">{{ include.person.name }}</a>
    {% else %}
      {{ include.person.name }}
    {% endif %}
  </h3>

  {% if include.person.role %}
    <p class="role">{{ include.person.role }}</p>
  {% endif %}

  {% if include.person.email %}
    <p><a href="mailto:{{ include.person.email }}">{{ include.person.email }}</a></p>
  {% endif %}
</div>
