---
layout: default
---

<div class="post">
  <article>

    <!-- PIs -->
    {% if page.pis %}
    <h2>Principal Investigators</h2>
    <div class="profiles-grid">
      {% for person in page.pis %}
        <div class="profile-card">
          {% if person.image %}
            <img src="{{ '/assets/img/people/' | append: person.image | relative_url }}" alt="{{ person.name }}" class="profile-photo">
          {% endif %}
          <h3>
            {% if person.link %}
              <a href="{{ person.link | relative_url }}">{{ person.name }}</a>
            {% else %}
              {{ person.name }}
            {% endif %}
          </h3>
          {% if person.role %}
            <p class="role">{{ person.role }}</p>
          {% endif %}
          {% if person.email %}
            <p><a href="mailto:{{ person.email }}">{{ person.email }}</a></p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    {% endif %}

